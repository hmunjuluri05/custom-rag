# LLM Configuration
# Option 1: Direct API Key (for personal use)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Option 2: API Gateway (for enterprise use)
LLM_API_GATEWAY_URL=https://your-api-gateway.company.com/llm
LLM_API_GATEWAY_KEY=your_gateway_api_key_here

# Embedding Configuration (optional - defaults to local models)
EMBEDDING_API_KEY=your_embedding_api_key_here

# Default LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4